# Multi-stage build: Clone from GitHub and build
FROM alpine/git AS clone
WORKDIR /app
RUN git clone --depth 1 --branch main https://github.com/CodeMasterGohan/glow-up-5k.git .

# Build stage - use the Dockerfile from the cloned repo
FROM node:18-alpine AS builder
WORKDIR /app
COPY --from=clone /app .
RUN npm ci
RUN npm run build

# Production stage
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
